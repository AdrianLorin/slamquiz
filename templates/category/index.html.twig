{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    
    <h1>{% trans %}Category index{% endtrans %}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Shortname</th>
                <th>Longname</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.shortname }}</td>
                <td>{{ category.longname }}</td>
                <td>
                    <a class="btn btn-primary" id="show" href="{{ path('category_show', {'id': category.id}) }}">{% trans %}show{% endtrans %}</a>
                    <a class="btn btn-primary" id="edit" href="{{ path('category_edit', {'id': category.id}) }}">{% trans %}edit{% endtrans %}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{% trans %}no records found{% endtrans %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a  class="btn btn-primary" href="{{ path('category_new') }}">{% trans %}Create new{% endtrans %}</a>
{% endblock %}
