{% extends 'base.html.twig' %}

{% block title %}{% trans %}Category{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}Category{% endtrans %}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Shortname</th>
                <td>{{ category.shortname }}</td>
            </tr>
            <tr>
                <th>Longname</th>
                <td>{{ category.longname }}</td>
            </tr>
            <tr>
                <th>Questionnary</th>
                <td>{% for quizzes in category.quizzes %}
                    {{ quizzes.title }}
                {% endfor %}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('category_index') }}">{% trans %}back to list{% endtrans %}</a>
    <br>
    {% if is_granted('ROLE_ADMIN') %}
    <a class="btn btn-primary" id="edit" href="{{ path('category_edit', {'id': category.id}) }}">{% trans %}edit{% endtrans %}</a>

    {{ include('category/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
